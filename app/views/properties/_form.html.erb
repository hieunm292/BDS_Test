<%= form_with(model: property) do |form| %>

  <%= render "layouts/validation", item: @property%>

  <div class="field">
    <%= form.label :name , class: "h5"%>
    <%= form.text_field :name , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :address , class: "h5"%>
    <%= form.text_field :address , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :price ,"Total Price (for sale) / Monthly Price (rental)", class: "h5"%>
    <%= form.number_field :price , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :rooms , class: "h5"%>
    <%= form.number_field :rooms , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :bathrooms , class: "h5"%>
    <%= form.number_field :bathrooms , class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :details , class: "h5"%>
    <%= form.text_area :details , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :for_sale %>
    <%= form.select :for_sale, options_for_select({ "Yes" => true, "No" => false }, @property.for_sale), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :available_date %>
    <%= form.date_field :available_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :parking_spaces %>
    <%= form.number_field :parking_spaces, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" , accept: "image/jpeg,image/gif,image/png"%>
  </div>

  <div class="actions">
    <%= form.submit "Save Property", class: "btn btn-success"%>
  </div>
<% end %>


<script type="text/javascript">
  $("#property_photo").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
    }
  });
</script>
