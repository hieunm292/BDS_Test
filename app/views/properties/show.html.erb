<div class="backgrund-image">
  <%= image_tag(@property.photo , class: "property-thumb") %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-6 ">
          <p class="h4 mb-0"><%= @property.for_sale? ? "For Sale" : "For Rent" %></p>
          <p class="mb-2"><%= @property.address %></p>
          <p class="h4 mb-0">
            <% if @property.for_sale? %>
              <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "Sale Sale" %>
            <% else %>
              <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Rent" %> / monthXX
            <%end%>


          </p>
        </div>
        <div class="col-md-6 mt-3 text-center">
          <div class="row mr-md-3 bg-light p-3">
            <div class="col-4">
              <i class="fas fa-bed text-muted m-0"></i><br />
              <small><%= @property.rooms %> Rooms</small>
            </div>
            <div class="col-4">
              <i class="fas fa-bath text-muted ml-1"></i><br />
              <small><%= @property.bathrooms %> Bathrooms</small>
            </div>
            <div class="col-4">
              <i class="fas fa-car"></i><br />
              <small><%= @property.parking_spaces %> Parking</small>
            </div>
          </div>
        </div>
      </div>
      <div class="row border-top border-bottom mt-5 pt-5 pb-4">
          <div class="col-6">
          <% if @property.for_sale? %>
            <strong><%=link_to "Est. Monthly Repayment of #{number_to_currency((@property.price/ 360), precision: 0)}", "#", class: "h4 text-success" %></strong>
          <% else %>
            <b class="text-success">Available from  <%= @property.available_date %> </b>
          <%end%>
          </div>
          <div class="col-6 text-right">
            <strong><%= link_to "Can i affrord this property ?", "#", class: "text-success h4"%> </strong>
          </div>
      </div>
      <div class="row">
        <div class="col pt-4">
          <p class="h2">Property Description</p>
          <p><%= @property.name %></p>

          <%= simple_format @property.details%>

          <%= link_to 'Back', request.referer, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
    <div class="col -4">
      <%= render "properties/agent_details"%>
      <iframe class="ml-lg-6 mt-3 " width="320" height="240" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyB1as2uf4ut2rf6f4-Xz57i2J80fJsOTrs&q=<%= @property.address.to_param %>" allowfullscreen></iframe>
    </div>
  </div>
  <section class="mt-5 mb-5">
    <div class="container" bis_skin_checked="1">
      <div class="row" bis_skin_checked="1">
        <div class="col-12">
          <p class="h3 mb-3">Other properties by this agent</p>
        </div>
        <%= render "properties/lastest_properties", properties: @agent_properties %>
      </div>
    </div>
  </section>
</div>

