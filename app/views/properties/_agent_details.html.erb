<div class="text-center border p-4 pb-4 ml-lg-4">
  <div class="mb-2">
    <%= gravatar_for @agent %>
  </div>
  <h3 class="h4 m-0"><%= @agent.full_name %></h3>
  <p><%= @agent.company %></p>
  <div class="row">
    <div class="col-12">
      <button class="btn btn-block btn-info text-uppercase mb-3 mt-3"><i class="fas fa-phone mr-2 "></i><span><%= @agent.telephone %></span></button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 pr-1">
      <%= link_to "Profile", current_account, class: "btn btn-secondary text-uppercase btn-block" %>
    </div>
    <div class="col-md-6 pl-1">
      <button class="btn btn-block btn-success text-uppercase" data-toggle="modal" data-target="#contact-modal"><i class="fas fa-envelope mr-2"></i>Email</button>
    </div>
  </div>
</div>
